	<ui:style>
		.content {
			position: absolute;
			top: 26px;
			left: 0px;
			right: 0px;
			bottom: 0px;
		}
		
		.navBar {
			position: absolute;
			top: 0px;
			left: 0px;
			width: 50%;
			bottom: 0px;
			text-align: left;
			font-weight: bold;
		}
	</ui:style>
	<ui:with field='res' type='org.jboss.wise.gui.client.Resources' />
	<g:HTMLPanel>
		<div id="toolbar"
			style="position: absolute; top:0px; left:0px; right:0px; height: 24px; border-bottom-style:solid; border-bottom-width:1px;">
			<g:SimplePanel styleName='{style.navBar}' ui:field='navBar' />
			<div
				style="position: absolute; top:0px; width:50%; right:0px; bottom: 0px; text-align:right;">
				<span style="margin-right: 10px;">
					Welcome
					<span ui:field='mail'></span>
				</span>
				<!--<g:Image resource='{res.edit}' ui:field='editBtn' />-->
				<g:Image resource='{res.logout}' ui:field='logoutBtn' />
			</div>
		</div>
		<g:SimplePanel ui:field="content" styleName="{style.content}" />
	</g:HTMLPanel>
</ui:UiBinder> 