<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:DialogBox autoHide='false' modal='true'>
		<g:caption>PASSWORD REMINDER</g:caption>
		<g:HTMLPanel>
			<table width='100%'>
				<tr>
					<td>
						Send mail to address:
						<g:TextBox ui:field='mail' visibleLength='30' />
					</td>
				</tr>
				<tr>
					<td align='right'>
						<g:Button ui:field='cancelBtn'>Cancel</g:Button>
						<g:SubmitButton ui:field='sendBtn'>Send</g:SubmitButton>
					</td>
				</tr>
			</table>
		</g:HTMLPanel>
	</g:DialogBox>
</ui:UiBinder>
