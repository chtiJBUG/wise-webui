	<ui:style>
		.form {
			empty-cells: show;
		}
		
		.info {
			font-style: italic;
			word-wrap: break-word;
		}
	</ui:style>
	<g:DialogBox autoHide='false' modal='true'
		animationEnabled='true'>
		<g:caption>NEW ACCOUNT</g:caption>
		<g:HTMLPanel>
			<table class='{style.form}' width='100%'>
                <tr>
                    <td colspan='2' class='{style.info}'><div style='width: 300px'>Note: this UI is only a mockup of what
                        will be WiseGUI when it will be completed. No registration really
                        occurs. All data is lost when the page is closed or refreshed.</div></td>
                </tr>
				<tr>
					<td>Mail:</td>
					<td>
						<g:TextBox ui:field='mail' visibleLength='30' />
					</td>
				</tr>
				<tr>
					<td>Confirm Mail:</td>
					<td>
						<g:TextBox ui:field='confirmMail' visibleLength='30' />
					</td>
				</tr>
				<tr>
					<td>Password:</td>
					<td>
						<g:PasswordTextBox ui:field='password'
							visibleLength='15' maxLength='15' />
					</td>
				</tr>
				<tr>
					<td>Confirm Password:</td>
					<td>
						<g:PasswordTextBox ui:field='confirmPassword'
							visibleLength='15' maxLength='15' />
					</td>
				</tr>
				<tr>
					<td colspan='2'>
						<span ui:field='msg' />
					</td>
				</tr>
			</table>
			<table width='100%'>
				<tr>
					<td align='right'>
						<g:Button ui:field='cancelBtn'>Cancel</g:Button>
						<g:SubmitButton ui:field='okBtn'>OK</g:SubmitButton>
					</td>
				</tr>
			</table>
		</g:HTMLPanel>
	</g:DialogBox>
</ui:UiBinder> 