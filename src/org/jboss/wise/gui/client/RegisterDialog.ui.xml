<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.form {
			empty-cells: show;
		}
	</ui:style>
	<g:DialogBox autoHide='false' modal='true'>
		<g:caption>NEW ACCOUNT</g:caption>
		<g:HTMLPanel>
			<table class='{style.form}' width='100%'>
				<tr>
					<td>Mail:</td>
					<td>
						<g:TextBox ui:field='mail' visibleLength='30' />
					</td>
				</tr>
				<tr>
					<td>Confirm Mail:</td>
					<td>
						<g:TextBox ui:field='confirmMail' visibleLength='30' />
					</td>
				</tr>
				<tr>
					<td>Password:</td>
					<td>
						<g:PasswordTextBox ui:field='password'
							visibleLength='15' maxLength='15' />
					</td>
				</tr>
				<tr>
					<td>Confirm Password:</td>
					<td>
						<g:PasswordTextBox ui:field='confirmPassword'
							visibleLength='15' maxLength='15' />
					</td>
				</tr>
				<tr>
					<td colspan='2'>
						<span ui:field='msg' />
					</td>
				</tr>
			</table>
			<table width='100%'>
				<tr>
					<td align='right'>
						<g:Button ui:field='cancelBtn'>Cancel</g:Button>
						<g:SubmitButton ui:field='okBtn'>OK</g:SubmitButton>
					</td>
				</tr>
			</table>
		</g:HTMLPanel>
	</g:DialogBox>
</ui:UiBinder> 